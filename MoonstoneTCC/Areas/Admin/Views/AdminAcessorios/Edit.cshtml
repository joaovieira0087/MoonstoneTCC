@model MoonstoneTCC.Models.Acessorio

@{
    ViewData["Title"] = "Editar Acessório";
}

<h2>Editar Acessório</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="AcessorioId" />

    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DescricaoCurta"></label>
        <input asp-for="DescricaoCurta" class="form-control" />
        <span asp-validation-for="DescricaoCurta" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DescricaoDetalhada"></label>
        <textarea asp-for="DescricaoDetalhada" class="form-control"></textarea>
        <span asp-validation-for="DescricaoDetalhada" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Preco"></label>
        <input asp-for="Preco" class="form-control" />
        <span asp-validation-for="Preco" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PrecoPromocional"></label>
        <input asp-for="PrecoPromocional" class="form-control" />
        <span asp-validation-for="PrecoPromocional" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Marca"></label>
        <input asp-for="Marca" class="form-control" />
        <span asp-validation-for="Marca" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Modelo"></label>
        <input asp-for="Modelo" class="form-control" />
        <span asp-validation-for="Modelo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Cor"></label>
        <input asp-for="Cor" class="form-control" />
        <span asp-validation-for="Cor" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Tipo"></label>
        <input asp-for="Tipo" class="form-control" />
        <span asp-validation-for="Tipo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Conectividade"></label>
        <input asp-for="Conectividade" class="form-control" />
        <span asp-validation-for="Conectividade" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Compatibilidade"></label>
        <input asp-for="Compatibilidade" class="form-control" />
        <span asp-validation-for="Compatibilidade" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Material"></label>
        <input asp-for="Material" class="form-control" />
        <span asp-validation-for="Material" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Peso"></label>
        <input asp-for="Peso" class="form-control" />
        <span asp-validation-for="Peso" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Dimensoes"></label>
        <input asp-for="Dimensoes" class="form-control" />
        <span asp-validation-for="Dimensoes" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Bateria"></label>
        <input asp-for="Bateria" class="form-control" />
        <span asp-validation-for="Bateria" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Garantia"></label>
        <input asp-for="Garantia" class="form-control" />
        <span asp-validation-for="Garantia" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ItensInclusos"></label>
        <input asp-for="ItensInclusos" class="form-control" />
        <span asp-validation-for="ItensInclusos" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ClassificacaoUso"></label>
        <input asp-for="ClassificacaoUso" class="form-control" />
        <span asp-validation-for="ClassificacaoUso" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="QuantidadeEstoque"></label>
        <input asp-for="QuantidadeEstoque" class="form-control" />
        <span asp-validation-for="QuantidadeEstoque" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EstoqueMinimoAlerta"></label>
        <input asp-for="EstoqueMinimoAlerta" class="form-control" />
        <span asp-validation-for="EstoqueMinimoAlerta" class="text-danger"></span>
    </div>

    <div class="form-check">
        <input asp-for="EmEstoque" class="form-check-input" />
        <label asp-for="EmEstoque" class="form-check-label"></label>
    </div>

    <div class="form-check">
        <input asp-for="IsAcessorioDestaque" class="form-check-input" />
        <label asp-for="IsAcessorioDestaque" class="form-check-label"></label>
    </div>

    <div class="form-check">
        <input asp-for="ProdutoNovo" class="form-check-input" />
        <label asp-for="ProdutoNovo" class="form-check-label"></label>
    </div>

    <div class="form-check">
        <input asp-for="ProdutoMaisVendido" class="form-check-input" />
        <label asp-for="ProdutoMaisVendido" class="form-check-label"></label>
    </div>

    <div class="form-group">
        <label asp-for="CategoriaId">Categoria</label>
        <select asp-for="CategoriaId" asp-items="ViewBag.Categorias" class="form-control">
            <option value="">Selecione uma categoria</option>
        </select>
        <span asp-validation-for="CategoriaId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Atualizar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

