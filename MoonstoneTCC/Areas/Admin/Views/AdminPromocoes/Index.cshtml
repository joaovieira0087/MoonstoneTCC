@model List<MoonstoneTCC.Models.Jogo>

@{
    ViewData["Title"] = "Gerenciar Promoções";
}

<h2 class="text-white mb-4"><i class="fas fa-tags me-2"></i> Gerenciar Promoções</h2>

<table class="table table-dark table-hover">
    <thead>
        <tr>
            <th>Jogo</th>
            <th>Preço Original</th>
            <th>Preço Promocional</th>
            <th>Desconto (%)</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var jogo in Model)
        {
            <tr>
                <td>@jogo.Nome</td>
                <td>R$ @jogo.Preco.ToString("F2")</td>
                <td>
                    @(jogo.PrecoPromocional.HasValue ? "R$ " + jogo.PrecoPromocional.Value.ToString("F2") : "-")
                </td>
                <td>
                    @(jogo.PorcentagemDesconto.HasValue ? jogo.PorcentagemDesconto + "%" : "-")
                </td>
                <td>
                    <form asp-action="AplicarPromocao" method="post" class="d-flex gap-2">
                        <input type="hidden" name="jogoId" value="@jogo.JogoId" />
                        <select name="porcentagem" class="form-select form-select-sm w-auto">
                            @for (int i = 10; i <= 80; i += 10)
                            {
                                <option value="@i">@i %</option>
                            }
                        </select>
                        <button type="submit" class="btn btn-success btn-sm">
                            Aplicar
                        </button>
                    </form>

                    <form asp-action="RemoverPromocao" method="post" class="mt-1">
                        <input type="hidden" name="jogoId" value="@jogo.JogoId" />
                        <button type="submit" class="btn btn-danger btn-sm">Remover</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
