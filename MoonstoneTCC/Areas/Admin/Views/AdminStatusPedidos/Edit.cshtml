@model MoonstoneTCC.Models.Pedido

@{
    ViewData["Title"] = "Editar Status do Pedido";
}

<h2 class="text-center text-success">Editar Status</h2>

<div class="row justify-content-center mt-4">
    <div class="col-md-6">
        <form asp-action="Edit">
            <input type="hidden" asp-for="PedidoId" />

            <div class="mb-3">
                <label class="form-label">Código do Pedido</label>
                <input class="form-control" value="@Model.CodigoPedido" disabled />
            </div>

            <div class="mb-3">
                <label asp-for="StatusPedido" class="form-label">Status</label>
                <select asp-for="StatusPedido" class="form-select" asp-items="ViewBag.StatusList">
                    <option value="">Selecione o status</option>
                </select>
                <span asp-validation-for="StatusPedido" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-save"></i> Salvar
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Voltar
                </a>
            </div>
        </form>
    </div>
</div>

