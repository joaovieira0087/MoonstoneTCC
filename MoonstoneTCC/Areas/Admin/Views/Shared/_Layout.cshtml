<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Moonstone</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">

    <style>
        /* SIDEBAR */
        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            bottom: 0;
            width: 250px;
            background-color: #1A1A1A;
            padding-top: 60px;
            box-shadow: 2px 0 10px rgba(0, 0, 0, 0.6);
            overflow-x: hidden;
            transition: width 0.3s ease;
            z-index: 999;
        }

            .sidebar.collapsed {
                width: 60px;
            }

        /* BOTÃO HAMBÚRGUER */
        .toggle-btn {
            position: fixed;
            top: 15px;
            left: 210px;
            width: 40px;
            height: 40px;
            background: transparent;
            border: none;
            cursor: pointer;
            z-index: 1000;
            transition: left 0.3s ease;
        }

            .toggle-btn span {
                display: block;
                width: 26px;
                height: 3px;
                background-color: #fff;
                margin: 6px auto;
                border-radius: 2px;
                transition: all 0.3s ease;
            }

            .toggle-btn.active span:nth-child(1) {
                transform: rotate(45deg) translate(5px, 5px);
            }

            .toggle-btn.active span:nth-child(2) {
                opacity: 0;
            }

            .toggle-btn.active span:nth-child(3) {
                transform: rotate(-45deg) translate(6px, -6px);
            }

        /* Corrige a posição do botão ao colapsar */
        .sidebar.collapsed ~ .toggle-btn {
            left: 20px;
        }

        /* BRAND */
        .navbar-brand {
            font-size: 1.6rem;
            color: #fff;
            text-align: center;
            margin-bottom: 30px;
            font-weight: bold;
            text-transform: uppercase;
            letter-spacing: 1.5px;
            background: linear-gradient(90deg, #333, #444);
            padding: 10px;
            border-radius: 5px;
        }

        .sidebar.collapsed .navbar-brand {
            display: none;
        }

        /* LINKS E BOTÕES */
        .sidebar a,
        .dropdown .btn {
            color: #ddd;
            text-decoration: none;
            display: flex;
            align-items: center;
            padding: 14px 20px;
            font-size: 15px;
            border-radius: 6px;
            transition: all 0.3s ease;
        }

            .sidebar a:hover,
            .dropdown .btn:hover {
                background-color: #333;
                color: #fff;
                transform: scale(1.03);
            }

        .sidebar i {
            margin-right: 12px;
            min-width: 20px;
            text-align: center;
        }

        /* Oculta texto e setas ao colapsar */
        .sidebar.collapsed a span,
        .sidebar.collapsed .dropdown .btn span,
        .sidebar.collapsed .dropdown .btn i.fa-chevron-down,
        .sidebar.collapsed .profile span {
            display: none;
        }

        .sidebar.collapsed a,
        .sidebar.collapsed .dropdown .btn {
            justify-content: center;
            padding: 15px;
        }

        /* DROPDOWN */
        .dropdown-menu {
            background-color: #2c2c2c;
            border: none;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.5);
        }

        .dropdown-item {
            color: #ccc;
        }

            .dropdown-item:hover {
                background-color: #444;
                color: #fff;
            }

        /* PERFIL */
        .profile {
            position: absolute;
            bottom: 20px;
            left: 20px;
            display: flex;
            align-items: center;
        }

            .profile i {
                font-size: 24px;
                margin-right: 10px;
            }

            .profile span {
                color: #ccc;
            }

        .sidebar.collapsed .profile {
            justify-content: center;
            left: 0;
            width: 100%;
        }

        /* CONTEÚDO PRINCIPAL */
        .content {
            margin-left: 250px;
            padding: 20px;
            transition: margin-left 0.3s ease;
            background-color: #fff;
            min-height: 100vh;
        }

            .content.collapsed {
                margin-left: 60px;
            }

        /* ITEM ATIVO DO MENU */
        .sidebar a.active {
            background: linear-gradient(90deg, #7c4dff, #8e24aa);
            color: #fff !important;
            font-weight: bold;
            border-left: 4px solid #b488f2;
        }

            .sidebar a.active i {
                color: #fff !important;
            }


    </style>
    
</head>
<body>
    <!-- SIDEBAR -->
    <div class="sidebar" id="sidebar">
        <a class="navbar-brand" asp-area="Admin" asp-controller="Admin" asp-action="Index">Admin</a>

        <a asp-area="Admin" asp-controller="AdminJogos" asp-action="Index"
           class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "AdminJogos" ? "active" : "")">
            <i class="fas fa-gamepad"></i> <span>Produtos</span>
        </a>

        <a asp-area="Admin" asp-controller="AdminCategorias" asp-action="Index"
           class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "AdminCategorias" ? "active" : "")">
            <i class="fas fa-th-large"></i> <span>Categorias</span>
        </a>

        <a asp-area="Admin" asp-controller="AdminPedidos" asp-action="Index"
           class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "AdminPedidos" ? "active" : "")">
            <i class="fas fa-box"></i> <span>Pedidos</span>
        </a>

        <a asp-area="Admin" asp-controller="AdminRelatorioVendas" asp-action="Index"
           class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "AdminRelatorioVendas" ? "active" : "")">
            <i class="fas fa-chart-line"></i> <span>Relatório Vendas</span>
        </a>

        <a asp-area="Admin" asp-controller="AdminUsuarios" asp-action="Index"
           class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "AdminUsuarios" ? "active" : "")">
            <i class="fas fa-users"></i> <span>Gestão de Usuários</span>
        </a>

        <!-- DROPDOWN GRÁFICOS -->
        <div class="dropdown">
            <button class="btn btn-secondary dropdown-toggle w-100" type="button" data-bs-toggle="dropdown">
                <i class="fas fa-chart-pie"></i> <span>Gráficos de Vendas</span> <i class="fas fa-chevron-down ms-auto"></i>
            </button>
            <div class="dropdown-menu">
                <a class="dropdown-item" asp-area="Admin" asp-controller="AdminGrafico" asp-action="Index">Vendas Anual</a>
                <a class="dropdown-item" asp-area="Admin" asp-controller="AdminGrafico" asp-action="VendasMensal" asp-route-dias="30">Vendas Mensais</a>
                <a class="dropdown-item" asp-area="Admin" asp-controller="AdminGrafico" asp-action="VendasSemanal" asp-route-dias="7">Vendas Semanais</a>
                <a class="dropdown-item" asp-area="Admin" asp-controller="AdminGrafico" asp-action="VendasTrimestral" asp-route-dias="90">Vendas Trimestrais</a>
                <a class="dropdown-item" asp-area="Admin" asp-controller="AdminGrafico" asp-action="VendasTotais">Vendas Totais</a>
                <a class="dropdown-item" asp-area="Admin" asp-controller="AdminGrafico" asp-action="VendasCustomizadas">Vendas Personalizadas</a>
            </div>
        </div>

        <a asp-area="Admin" asp-controller="AdminImagens" asp-action="Index"
           class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "AdminImagens" ? "active" : "")">
            <i class="fas fa-image"></i> <span>Gerenciar Imagens</span>
        </a>

        <a asp-controller="AdminJogosReport" asp-action="JogosCategoriaReport"
           class="@(ViewContext.RouteData.Values["action"]?.ToString() == "JogosCategoriaReport" ? "active" : "")">
            <i class="fas fa-file-alt"></i> <span>Visualizar Relatório de Jogos (Web)</span>
        </a>

        <a asp-controller="AdminJogosReport" asp-action="JogosCategoriaPDF"
           class="@(ViewContext.RouteData.Values["action"]?.ToString() == "JogosCategoriaPDF" ? "active" : "")">
            <i class="fas fa-file-pdf"></i> <span>Baixar Relatório de Jogos em PDF</span>
        </a>

        <a asp-area="Admin" asp-controller="AdminPerguntas" asp-action="Index"
           class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "AdminPerguntas" ? "active" : "")">
            <i class="fas fa-question-circle"></i> <span>Perguntas de Usuários</span>
        </a>

        <a asp-area="Admin" asp-controller="AdminComunicado" asp-action="Index"
           class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "AdminComunicado" ? "active" : "")">
            <i class="fas fa-bullhorn"></i> <span>Comunicados</span>
        </a>





        <a asp-area="Admin" asp-controller="Promocoes" asp-action="Index"
           class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Promocoes" ? "active" : "")">
            <i class="fas fa-tags"></i> <span>Gestão de Promoções</span>
        </a>

        <a asp-controller="Account" asp-action="Logout">
            <i class="fas fa-sign-out-alt"></i> <span>Sair</span>
        </a>

        <!-- PERFIL -->
        <div class="profile">
            <i class="fas fa-user-circle"></i> <span>Admin User</span>
        </div>
    </div>

    <!-- BOTÃO HAMBÚRGUER -->
    <button class="toggle-btn" onclick="toggleSidebar()" id="hamburger">
        <span></span>
        <span></span>
        <span></span>
    </button>

    <!-- CONTEÚDO -->
    <div class="content" id="content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        function toggleSidebar() {
            const sidebar = document.getElementById('sidebar');
            const content = document.getElementById('content');
            const hamburger = document.getElementById('hamburger');

            sidebar.classList.toggle('collapsed');
            content.classList.toggle('collapsed');
            hamburger.classList.toggle('active');
        }
    </script>




    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>