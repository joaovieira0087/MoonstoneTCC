@using MoonstoneTCC.Models
@model IEnumerable<Comunicado>

@{
    ViewData["Title"] = "Comunicados Publicados";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-white"><i class="fas fa-bullhorn"></i> Comunicados Publicados</h2>
        <a class="btn btn-success shadow" asp-action="Criar">
            <i class="fas fa-plus-circle"></i> Novo Comunicado
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-dark table-hover table-bordered shadow-lg rounded">
            <thead class="table-purple text-white">
                <tr>
                    <th style="width: 20%">Título</th>
                    <th style="width: 50%">Mensagem</th>
                    <th style="width: 20%">Data</th>
                    <th style="width: 10%">Ações</th> <!-- nova coluna -->
                </tr>
            </thead>
            <tbody>
                @foreach (var c in Model)
                {
                    <tr>
                        <td class="fw-bold">@c.Titulo</td>
                        <td>@c.Mensagem</td>
                        <td>@c.DataCriacao.ToString("dd/MM/yyyy HH:mm")</td>
                        <td class="text-center">
                            <a class="btn btn-sm btn-outline-info me-1" asp-action="Respostas" asp-route-id="@c.Id" title="Ver respostas">
                                <i class="fas fa-eye"></i>
                            </a>

                            <a class="btn btn-sm btn-outline-warning me-1" asp-action="Editar" asp-route-id="@c.Id" title="Editar comunicado">
                                <i class="fas fa-edit"></i>
                            </a>

                            <form asp-action="Excluir" asp-route-id="@c.Id" method="post" class="d-inline" onsubmit="return confirm('Tem certeza que deseja excluir este comunicado?');">
                                <button type="submit" class="btn btn-sm btn-outline-danger me-1" title="Excluir comunicado">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                            </form>

                            <button type="button" class="btn btn-sm btn-outline-secondary" title="Copiar link" onclick="copiarLink('@Url.Action("Comunicados", "ComunicadoUsuario", new { id = c.Id }, Context.Request.Scheme)')">
                                <i class="fas fa-copy"></i>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


<style>
    body {
        background-color: #2A003F;
    }

    .table-purple {
        background-color: #6f42c1;
    }

    .table td, .table th {
        vertical-align: middle;
    }

    .btn-success {
        background-color: #28a745;
        border: none;
    }

    .btn-success:hover {
        background-color: #218838;
    }

    h2 {
        font-weight: 600;
    }
</style>

<script>
    function copiarLink(link) {
        navigator.clipboard.writeText(link).then(function () {
            alert("Link copiado para a área de transferência!");
        }, function (err) {
            alert("Erro ao copiar o link: " + err);
        });
    }
</script>

