@model MoonstoneTCC.Models.Comunicado

@{
    ViewData["Title"] = "Confirmar Exclusão";
    var perguntas = ViewBag.Perguntas as List<string>;
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    body {
        background-color: #f8f9fa;
    }

    h2 {
        color: #3A0066;
    }

    .alert-danger {
        border: 1px solid #dc3545;
    }

    .form-label {
        color: #3A0066;
        font-weight: 600;
    }

    .btn-purple {
        background-color: #6f42c1;
        color: white;
    }

    .btn-purple:hover {
        background-color: #5a34a1;
    }
</style>

<div class="container mt-5">
    <h2 class="mb-4"><i class="fas fa-trash"></i> Confirmar Exclusão</h2>

    <div class="alert alert-danger">
        <strong>Tem certeza que deseja excluir este comunicado?</strong>
        <p class="mt-3"><strong>Título:</strong> @Model.Titulo</p>
        <p><strong>Mensagem:</strong> @Model.Mensagem</p>
    </div>

    @if (Model.Tipo == TipoComunicado.Pergunta && perguntas != null && perguntas.Count > 0)
    {
        <div class="mb-4">
            <label class="form-label">Perguntas associadas:</label>
            <ul class="list-group">
                @foreach (var p in perguntas)
                {
                    <li class="list-group-item">@p</li>
                }
            </ul>
        </div>
    }

    <form asp-action="ExcluirConfirmado" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger me-2">
            <i class="fas fa-check"></i> Sim, excluir
        </button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
