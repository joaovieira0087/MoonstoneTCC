@model IEnumerable<MoonstoneTCC.Models.CartaoCredito>
@{
    ViewData["Title"] = "Meus Cartões";
}

<div class="container mt-5">
    <h3 class="text-white mb-4">💳 Meus Cartões Salvos</h3>

    <a asp-action="Adicionar" class="btn btn-success mb-4">
        <i class="fa fa-plus-circle"></i> Adicionar Novo Cartão
    </a>

    @if (!Model.Any())
    {
        <div class="alert alert-warning">Você ainda não adicionou nenhum cartão.</div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var cartao in Model)
            {
                <div class="col">
                    <div class="card bg-dark text-white p-3 shadow">
                        <p><strong>Cartão:</strong> final @cartao.NumeroParcial</p>
                        <p><strong>Validade:</strong> @cartao.Validade</p>
                        <p><strong>Titular:</strong> @cartao.NomeTitular</p>
                        @if (cartao.CartaoPadrao)
                        {
                            <span class="badge bg-success">Cartão Padrão</span>
                        }

                        <div class="mt-3 d-flex gap-2">
                            @if (!cartao.CartaoPadrao)
                            {
                                <a asp-action="DefinirComoPadrao" asp-route-id="@cartao.Id" class="btn btn-outline-info btn-sm">
                                    <i class="fa fa-star"></i> Usar como Padrão
                                </a>
                            }
                            <a asp-action="Excluir" asp-route-id="@cartao.Id" class="btn btn-outline-danger btn-sm">
                                <i class="fa fa-trash"></i> Excluir
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
