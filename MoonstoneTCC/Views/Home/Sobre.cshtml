@{
    ViewData["Title"] = "Sobre a Moonstone";
}

<style>
    .google-style-cards {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 20px;
        justify-content: center;
        margin-top: 40px;
        max-width: 1200px;
        margin-left: auto;
        margin-right: auto;
        padding: 0 15px;
    }

    .card {
        background-color: #fff;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        transition: transform 0.2s ease-in-out;
        position: relative;
        width: 100%; /* ⬅️ Faz o card ocupar todo o espaço do grid */
        text-decoration: none;
        color: inherit;
        display: flex;
        flex-direction: column;
    }

        .card:hover {
            transform: translateY(-5px);
        }

        .card img {
            width: 100%;
            height: 180px;
            object-fit: cover;
            display: block;
        }

    .card-content {
        padding: 16px;
        position: relative;
        min-height: 70px;
        flex: 1;
    }

        .card-content h3 {
            font-size: 18px;
            font-weight: 500;
            text-align: center;
            margin: 0;
            color: #202124;
        }

        .card-content i {
            position: absolute;
            bottom: 12px;
            right: 16px;
            color: #5f6368;
            font-size: 16px;
        }
    <!-- Card 1: estilo parte de cima  -->

    .moonstone-footer-highlight {
        margin-top: 60px;
        padding: 60px 20px;
        background: linear-gradient(to right, #3B0056, #220033);
        border-radius: 20px;
        color: #ffffff;
        box-shadow: 0 0 25px rgba(0,0,0,0.4);
    }

    .moonstone-footer-logo {
        max-width: 180px;
        height: auto;
        margin-bottom: 30px;
        border-radius: 16px;
        box-shadow: 0 0 12px rgba(255,255,255,0.15);
        transition: transform 0.3s ease;
    }

        .moonstone-footer-logo:hover {
            transform: scale(1.05);
        }

    .moonstone-footer-title {
        font-size: 26px;
        font-weight: 800;
        margin-bottom: 15px;
        color: #e5d0ff;
        text-shadow: 1px 1px 4px rgba(0, 0, 0, 0.4);
    }

    .moonstone-footer-subtitle {
        font-size: 18px;
        font-weight: 400;
        color: #cbb3f7;
        max-width: 600px;
        margin: 0 auto;
    }

</style>

<div class="moonstone-footer-highlight text-center">
    <img src="~/img/userlmn_190a820892874567a91071d0542da791.png" alt="MoonstoneTCC" class="moonstone-footer-logo" />

    <h3 class="moonstone-footer-title">Moonstone: Mais do que uma loja, um universo em construção.</h3>
    <p class="moonstone-footer-subtitle">Junte-se à jornada. Viva o novo. Viva Moonstone.</p>
</div>



