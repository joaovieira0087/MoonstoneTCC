@model MoonstoneTCC.Models.ListaJogo
@{
    ViewData["Title"] = "Lista Pública";
}

<div class="container mt-5">
    <h2 class="text-light mb-1">
        <i class="fas fa-folder-open text-purple me-2"></i>@Model.Nome
    </h2>
    <p class="text-muted">Criada por: <strong class="text-purple">@Model.Usuario?.UserName</strong></p>

    <div class="d-flex flex-wrap gap-2 mb-4">
        @if (Model.Jogos?.Any() == true)
        {
            <!-- Adicionar ao Carrinho -->
            <form asp-controller="CarrinhoCompra" asp-action="AdicionarMultiplosAoCarrinho" method="post">
                @foreach (var item in Model.Jogos)
                {
                    <input type="hidden" name="jogoIds" value="@item.JogoId" />
                }
                <button type="submit" class="btn btn-purple btn-sm">
                    <i class="fas fa-cart-plus me-1"></i> Adicionar @Model.Jogos.Count ao Carrinho
                </button>
            </form>

            <!-- Comprar Agora -->
            <form asp-controller="CarrinhoCompra" asp-action="ComprarMultiplosAgora" method="post">
                @foreach (var item in Model.Jogos)
                {
                    <input type="hidden" name="jogoIds" value="@item.JogoId" />
                }
                <button type="submit" class="btn btn-success btn-sm">
                    <i class="fas fa-bolt me-1"></i> Comprar @(Model.Jogos.Count == 1 ? "1 jogo agora" : $"{Model.Jogos.Count} jogos agora")
                </button>
            </form>
        }

        @{
            var usuarioLogado = User?.Identity?.IsAuthenticated == true;
            var donoDaLista = usuarioLogado && User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value == Model.UsuarioId;
        }

        @if (usuarioLogado && !donoDaLista)
        {
            <form asp-controller="ListaJogo"
                  asp-action="CopiarLista"
                  method="post" class="d-inline">
                <input type="hidden" name="listaId" value="@Model.ListaJogoId" />
                <button type="submit" class="btn btn-outline-info btn-sm">
                    <i class="fas fa-copy me-1"></i> Adicionar esta lista às minhas
                </button>
            </form>
        }
        @if (TempData["MensagemSucesso"] is string ok)
        {
            <div class="alert alert-success">@ok</div>
        }
        @if (TempData["Mensagem"] is string msg)
        {
            <div class="alert alert-warning">@msg</div>
        }
    </div>

    <hr class="border-purple" />

    @if (Model.Jogos.Any())
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var item in Model.Jogos)
            {
                var jogo = item.Jogo;
                if (jogo != null)
                {
                    <div class="col">
                        <div class="card h-100 custom-card-roxo text-white border border-purple shadow-sm">
                            <img src="@jogo.ImagemThumbnailUrl" class="card-img-top" alt="@jogo.Nome" style="height: 200px; object-fit: cover;" />
                            <div class="card-body d-flex flex-column justify-content-between">
                                <div class="text-start px-2 pt-2">
                                    <h5 class="card-title fw-bold text-white mb-1">@jogo.Nome</h5>
                                    <p class="mb-1">
                                        <span class="badge bg-dark text-white border border-purple">@jogo.Plataformas</span>
                                    </p>
                                    <!-- Preço (aproximado do botão) -->
                                    <p class="fw-bold text-dark text-center mb-3" style="font-size: 1.1rem;">
                                        <a asp-controller="Jogo" asp-action="Details" asp-route-jogoId="@item.Jogo.JogoId" class="text-dark text-decoration-none">
                                            @if (item.Jogo.PrecoPromocional != null && item.Jogo.PorcentagemDesconto != null)
                                            {
                                                <span class="text-muted text-decoration-line-through me-2">
                                                    @item.Jogo.Preco.ToString("C")
                                                </span>
                                                <span class="text-danger fw-bold">
                                                    @item.Jogo.PrecoPromocional?.ToString("C")
                                                </span>
                                                <span class="badge bg-success ms-2">
                                                    -@item.Jogo.PorcentagemDesconto%
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="text-dark">@item.Jogo.Preco.ToString("C")</span>
                                            }
                                        </a>
                                    </p>
                                </div>
                            </div>
                            <div class="card-footer bg-transparent border-top-0 d-flex justify-content-between align-items-center px-3 py-2">
                                <a class="btn btn-outline-light btn-sm" href="@Url.Action("Details", "Jogo", new { jogoId = item.JogoId })">
                                    <i class="fas fa-info-circle me-1"></i> Ver Detalhes
                                </a>
                                <span class="badge bg-success">@jogo.Preco.ToString("C")</span>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    }
    else
    {
        <div class="alert alert-warning mt-4">Esta lista ainda não contém jogos.</div>
    }
</div>

<style>
    .text-purple {
        color: #9d3ce6;
    }

    .bg-purple {
        background-color: #7e00c8;
        color: #fff;
    }

    .border-purple {
        border-color: #7e00c8 !important;
    }

    .btn-purple {
        background-color: #7e00c8;
        color: white;
        border: none;
        transition: background-color 0.3s ease;
    }

        .btn-purple:hover {
            background-color: #9d3ce6;
        }

    .custom-card-roxo {
        background-color: #2b1b3a;
        transition: background-color 0.3s ease;
    }

        .custom-card-roxo:hover {
            background-color: #3b2650;
        }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
        color: white;
    }

        .btn-success:hover {
            background-color: #218838;
            border-color: #1e7e34;
        }

    .badge.bg-success {
        font-weight: 500;
        font-size: 0.9rem;
    }

    .card-footer span.badge {
        font-size: 0.9rem;
    }
</style>
