@model List<MoonstoneTCC.Models.Jogo>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<div class="container my-5">
    <h2 class="text-white pb-2 mb-4">⭐ Minhas Opiniões</h2>

    <!-- Abas -->
    <ul class="nav nav-tabs custom-tabs mb-4">
        <li class="nav-item">
            <a asp-controller="MeusPedidos" asp-action="Avaliar" class="nav-link">Pendentes</a>
        </li>

        <li class="nav-item">
            <a asp-controller="Comentario" asp-action="Realizadas" class="nav-link">
                <i class="fas fa-star me-1"></i> Minhas Avaliações
            </a>
        </li>
    </ul>

    <!-- Alerta superior -->
    <div class="alert bg-purple-dark text-white d-flex align-items-center shadow-sm rounded-3">
        <i class="fas fa-star me-3 text-warning fs-4"></i>
        <div>
            <strong>Nova seção “Minhas opiniões”</strong><br />
            Todos os dias, milhares de pessoas leem opiniões antes de decidir fazer uma compra. <strong>Compartilhe as suas!</strong>
        </div>
    </div>

    @if (!Model.Any())
    {
        <p class="text-light fst-italic">Nenhum jogo pendente de avaliação.</p>
    }
    else
    {
        <p class="text-muted mb-3">Você tem @Model.Count opinião(ões) pendente(s)</p>

        @foreach (var jogo in Model)
        {
            <div class="card bg-purple-dark text-white mb-4 border-0 shadow-sm rounded-4 p-3">
                <div class="d-flex flex-row align-items-center">
                    <!-- Imagem -->
                    <img src="@jogo.ImagemUrl" alt="@jogo.Nome"
                         class="rounded-3 me-4 border border-purple"
                         style="width: 80px; height: 80px; object-fit: cover;" />

                    <!-- Informações -->
                    <div class="flex-grow-1">
                        <h5 class="mb-1">@jogo.Nome</h5>
                        <small class="text-muted">Comprado em @(DateTime.Now.ToString("dd 'de' MMM, yyyy"))</small>

                        <form asp-controller="Comentario" asp-action="Comentar" method="post" class="mt-3">
                            <input type="hidden" name="jogoId" value="@jogo.JogoId" />

                            <!-- Estrelas -->
                            <div class="avaliacao-estrelas mb-3">
                                @for (int i = 5; i >= 1; i--)
                                {
                                    <input type="radio" id="estrela@i-@jogo.JogoId" name="avaliacao" value="@i" />
                                    <label for="estrela@i-@jogo.JogoId"><i class="fas fa-star"></i></label>
                                }
                            </div>

                            <!-- Comentário -->
                            <div class="mb-3">
                                <textarea name="texto" class="form-control bg-dark border-0 text-white rounded-3" rows="2" placeholder="O que você achou do jogo?"></textarea>
                            </div>

                            <button type="submit" class="btn btn-purple px-4">
                                <i class="fas fa-paper-plane me-2"></i> Enviar Avaliação
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    }
</div>

<style>
    /* Tons principais */
    .bg-purple {
        background-color: #6f42c1 !important;
        color: #fff;
        transition: background-color 0.3s ease;
    }

    .bg-purple-dark {
        background-color: #3B0056 !important;
        color: #fff;
    }

    /* Borda lateral estilizada */
    .border-purple {
        border-left: 4px solid #9b59b6;
    }

    /* Botão roxo estilizado */
    .btn-purple {
        background-color: #7c3aed;
        color: #fff;
        border: none;
        border-radius: 8px;
        padding: 10px 20px;
        font-weight: 600;
        box-shadow: 0 4px 10px rgba(124, 58, 237, 0.4);
        transition: all 0.3s ease;
    }

        .btn-purple:hover {
            background-color: #5b21b6;
            box-shadow: 0 6px 15px rgba(91, 33, 182, 0.6);
            transform: translateY(-1px);
        }

    /* Estrelas com visual moderno */
    .avaliacao-estrelas {
        display: flex;
        flex-direction: row-reverse;
        justify-content: flex-start;
        gap: 8px;
    }

        .avaliacao-estrelas input[type="radio"] {
            display: none;
        }

        .avaliacao-estrelas label {
            font-size: 26px;
            color: #777;
            cursor: pointer;
            transition: color 0.3s ease, transform 0.2s ease;
        }

            .avaliacao-estrelas label:hover,
            .avaliacao-estrelas label:hover ~ label,
            .avaliacao-estrelas input[type="radio"]:checked ~ label {
                color: #ffc107;
                transform: scale(1.1);
            }

    /* Campos de texto com estilo roxo escuro */
    textarea.form-control {
        background-color: #2e004a !important;
        border: 1px solid #5e2c82;
        color: #fff;
        resize: vertical;
        transition: border 0.3s ease;
    }

        textarea.form-control:focus {
            border-color: #9b59b6;
            box-shadow: 0 0 0 0.2rem rgba(155, 89, 182, 0.25);
            outline: none;
        }

    /* Cartões de avaliação */
    .card {
        border-radius: 16px;
        border: none;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 20px rgba(124, 58, 237, 0.2);
        }

    /* Texto cinza claro */
    .text-muted {
        color: #c7b6e1 !important;
    }

    /* Abas com estilo roxo moderno */
    .custom-tabs {
        background-color: #3B0056;
        border-bottom: 2px solid #9b59b6;
        border-radius: 12px 12px 0 0;
        overflow: hidden;
    }

        .custom-tabs .nav-link {
            color: #c7b6e1;
            background-color: transparent;
            border: none;
            padding: 12px 20px;
            font-weight: 600;
            transition: all 0.3s ease;
            border-radius: 12px 12px 0 0;
        }

            .custom-tabs .nav-link:hover {
                background-color: #5e2c82;
                color: #fff;
            }

            .custom-tabs .nav-link.active {
                background-color: #7c3aed;
                color: #fff;
                border: none;
                box-shadow: inset 0 -4px 0 #9b59b6;
            }

</style>
