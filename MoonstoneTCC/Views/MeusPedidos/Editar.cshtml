@model MoonstoneTCC.Models.ComentarioJogo
@if (!ViewData.ModelState.IsValid)
{
    <div class="text-danger">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

<div class="container my-5">
    <h2 class="text-white mb-4"><i class="fas fa-edit me-2"></i> Editar Comentário</h2>

    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success">@TempData["MensagemSucesso"]</div>
    }

    @if (TempData["Erro"] != null)
    {
        <div class="alert alert-danger">@TempData["Erro"]</div>
    }

    <div class="card bg-purple-dark text-white p-4 shadow rounded-4">
        <h4 class="mb-3">@Model.Jogo?.Nome</h4>

        <form asp-controller="Comentario" asp-action="Editar" method="post">
            @* Campos ocultos obrigatórios *@
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="JogoId" />

            <!-- Avaliação com estrelas -->
            <div class="form-group mb-3">
                <label class="text-white mb-2 d-block">Sua Avaliação:</label>
                <div class="avaliacao-estrelas">
                    <input type="radio" id="estrela5" name="Avaliacao" value="5" />
                    <label for="estrela5" title="5 estrelas"></label>

                    <input type="radio" id="estrela4" name="Avaliacao" value="4" />
                    <label for="estrela4" title="4 estrelas"></label>

                    <input type="radio" id="estrela3" name="Avaliacao" value="3" />
                    <label for="estrela3" title="3 estrelas"></label>

                    <input type="radio" id="estrela2" name="Avaliacao" value="2" />
                    <label for="estrela2" title="2 estrelas"></label>

                    <input type="radio" id="estrela1" name="Avaliacao" value="1" />
                    <label for="estrela1" title="1 estrela"></label>
                </div>
                <span asp-validation-for="Avaliacao" class="text-danger"></span>
            </div>





            @* Campo do texto do comentário *@
            <div class="mb-3">
                <label asp-for="Texto" class="form-label">Comentário:</label>
                <textarea asp-for="Texto"
                          class="form-control bg-dark text-white border-0 rounded-3"
                          placeholder="Escreva sua opinião (opcional, sem caracteres especiais)"
                          rows="4"></textarea>

                <span asp-validation-for="Texto" class="text-danger"></span>
            </div>

            @* Botões *@
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-purple">
                    <i class="fas fa-save me-2"></i> Salvar Alterações
                </button>

                <a asp-action="Realizadas" class="btn btn-outline-light">
                    Cancelar
                </a>
            </div>
        </form>
    </div>
</div>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


<style>
    .bg-purple-dark {
        background-color: #3B0056;
    }

    .btn-purple {
        background-color: #7c3aed;
        color: #fff;
        border: none;
    }

    .btn-purple:hover {
        background-color: #5b21b6;
    }

    .avaliacao-estrelas {
        display: flex;
        flex-direction: row-reverse;
        justify-content: flex-start;
        gap: 5px;
    }

        .avaliacao-estrelas input[type="radio"] {
            display: none;
        }

        .avaliacao-estrelas label {
            font-size: 2rem;
            color: #999;
            cursor: pointer;
        }

            .avaliacao-estrelas label::before {
                content: "\f005"; /* ícone estrela sólida do Font Awesome */
                font-family: "Font Awesome 6 Free";
                font-weight: 900;
            }

        .avaliacao-estrelas input[type="radio"]:checked ~ label::before {
            color: #ffc107;
        }

        .avaliacao-estrelas label:hover,
        .avaliacao-estrelas label:hover ~ label {
            color: #ffde59;
        }

</style>

<script>
    const textarea = document.querySelector("textarea[name='Texto']");
    const caracteresProibidos = /[^a-zA-Z0-9\s.,!?çáéíóúàèìòùâêîôûãõÁÉÍÓÚÃÕÇÀÈÌÒÙÂÊÎÔÛ]/g;

    textarea.addEventListener("input", function () {
        this.value = this.value.replace(caracteresProibidos, "");
    });


        document.addEventListener("DOMContentLoaded", function () {
            var avaliacao = @Model.Avaliacao;

        var input = document.querySelector(`input[name="Avaliacao"][value="${avaliacao}"]`);
        if (input) {
            input.checked = true;
            }
        });

</script>
