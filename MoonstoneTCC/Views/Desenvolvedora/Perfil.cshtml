@model MoonstoneTCC.ViewModels.DesenvolvedoraPerfilViewModel

<div class="container mt-5">
    <div class="card bg-roxo-claro p-4 text-white">
        <div class="d-flex align-items-center gap-4 flex-wrap">
            <img src="@Model.Desenvolvedora.FotoPerfilUrl" class="rounded-circle border border-light" width="100" height="100" style="object-fit: cover;" />
            <div>
                <h2 class="mb-1">@Model.Desenvolvedora.Nome</h2>

                <form asp-action="ToggleSeguir" method="post" class="d-inline">
                    <input type="hidden" name="desenvolvedoraId" value="@Model.Desenvolvedora.DesenvolvedoraId" />
                    <button type="submit" class="btn btn-outline-purple btn-sm">
                        <i class="fas fa-user-plus me-1"></i> @(Model.EstaSeguindo ? "Seguindo" : "Seguir")
                    </button>
                </form>
            </div>

            <div class="d-flex justify-content-center gap-4 mt-3 text-white-50">
@*                 <a href="/Desenvolvedora/Conexoes/@Model.Desenvolvedora.DesenvolvedoraId#seguindo" class="text-decoration-none hover-zoom">
                    <i class="fa-solid fa-user-friends text-purple"></i>
                    <div class="d-flex flex-column align-items-center">
                        <strong class="fs-5">@Model.TotalSeguindo</strong>
                        <span class="small text-muted">Seguindo</span>
                    </div>
                </a> *@
                <a href="/Desenvolvedora/Conexoes/@Model.Desenvolvedora.DesenvolvedoraId#seguidores" class="text-decoration-none hover-zoom">
                    <i class="fa-solid fa-users text-purple"></i>
                    <div class="d-flex flex-column align-items-center">
                        <strong class="fs-5">@Model.TotalSeguidores</strong>
                        <span class="small text-muted">Seguidores</span>
                    </div>
                </a>
            </div>


        </div>

        <hr class="bg-light mt-4" />

        <div class="descricao-detalhada">
            <h3>Sobre</h3>
            <p>@Model.Desenvolvedora.Descricao</p>

            @if (!string.IsNullOrEmpty(Model.Desenvolvedora.Curiosidades))
            {
                <h4>Curiosidades</h4>
                <div class="alert alert-info">
                    <i class="fas fa-lightbulb text-warning me-2"></i> @Model.Desenvolvedora.Curiosidades
                </div>
            }
        </div>

        @* SLIDES *@
        @{
            var slides = new List<(string Url, int Index)>();
            if (!string.IsNullOrEmpty(Model.Desenvolvedora.SlideImagens))
            {
                var slidesRaw = Model.Desenvolvedora.SlideImagens.Split(';');
                for (int i = 0; i < slidesRaw.Length; i++)
                    slides.Add((slidesRaw[i], i));
            }
        }

        @if (slides.Any())
        {
            <div id="slideDesenvolvedora" class="carousel slide mt-4 carousel-container" data-bs-ride="carousel">
                <div class="carousel-inner">
                    @foreach (var slide in slides)
                    {
                        <div class="carousel-item @(slide.Index == 0 ? "active" : "")">
                            <img src="@slide.Url" class="d-block w-100" />
                        </div>
                    }
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#slideDesenvolvedora" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon"></span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#slideDesenvolvedora" data-bs-slide="next">
                    <span class="carousel-control-next-icon"></span>
                </button>
            </div>
        }

        <h4 class="mt-5">Jogos da Desenvolvedora</h4>
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-3 mt-2">
            @foreach (var jogo in Model.Desenvolvedora.Jogos)
            {
                var listasMarcadas = ViewBag.ListasComJogo as List<int> ?? new List<int>();
                <div class="col">
                    <div class="card h-100 bg-dark text-white hover-zoom p-2">
                        <img src="@jogo.ImagemThumbnailUrl" class="card-img-top" alt="@jogo.Nome" style="object-fit: cover; height: 180px;" />
                        <div class="card-body">
                            <h5 class="card-title">@jogo.Nome</h5>

                            <a class="btn btn-outline-light w-100 mt-2" href="@Url.Action("Details", "Jogo", new { jogoId = jogo.JogoId })">
                                <i class="fas fa-info-circle me-1"></i> Ver Detalhes
                            </a>

                            <div class="row mt-3 g-2">
                                <div class="col-6">
                                    <form asp-controller="Pedido" asp-action="ComprarAgora" method="post">
                                        <input type="hidden" name="jogoId" value="@jogo.JogoId" />
                                        <button type="submit" class="btn btn-success w-100">
                                            <i class="fas fa-bolt me-2"></i> Comprar Agora
                                        </button>
                                    </form>
                                </div>
                                <div class="col-6">
                                    <form asp-controller="Carrinho" asp-action="Adicionar" method="post">
                                        <input type="hidden" name="jogoId" value="@jogo.JogoId" />
                                        <button type="submit" class="btn btn-outline-light w-100">
                                            <i class="fas fa-cart-plus me-2"></i> Adicionar
                                        </button>
                                    </form>
                                </div>
                                <div class="col-6">
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        <form asp-controller="Favorito" asp-action="Adicionar" method="post">
                                            <input type="hidden" name="jogoId" value="@jogo.JogoId" />
                                            <button type="submit" class="btn btn-warning w-100 d-flex align-items-center justify-content-center">
                                                <i class="fas fa-heart me-2"></i> Favoritar
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <a asp-controller="Account" asp-action="Login"
                                           asp-route-returnUrl="@Url.Action("Details", "Jogo", new { jogoId = jogo.JogoId })"
                                           class="btn btn-warning w-100 d-flex align-items-center justify-content-center">
                                            <i class="fas fa-heart me-2"></i> Favoritar
                                        </a>
                                    }
                                </div>
                                <div class="col-6 position-relative">
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        <button class="btn btn-success w-100 d-flex align-items-center justify-content-center"
                                                type="button" onclick="document.getElementById('painelListas_@jogo.JogoId').style.display='block'">
                                            <i class="fas fa-folder-plus me-2"></i> Adicionar à Lista
                                        </button>

                                        <div id="painelListas_@jogo.JogoId" class="card text-white bg-dark border-light mt-2 p-3"
                                             style="display:none; position:absolute; z-index:10; width: 300px;">
                                            <div class="d-flex justify-content-between align-items-center mb-2">
                                                <strong>Salvar em...</strong>
                                                <button type="button" class="btn-close btn-close-white" aria-label="Fechar"
                                                        onclick="document.getElementById('painelListas_@jogo.JogoId').style.display='none'"></button>
                                            </div>

                                            <div class="mb-2">
                                                @if (ViewBag.ListasDoUsuario != null)
                                                {
                                                    foreach (var lista in ViewBag.ListasDoUsuario as List<MoonstoneTCC.Models.ListaJogo>)
                                                    {
                                                        var marcado = listasMarcadas.Contains(lista.ListaJogoId);
                                                        <div class="form-check">
                                                            <input class="form-check-input lista-checkbox"
                                                                   type="checkbox"
                                                                   value="@lista.ListaJogoId"
                                                                   id="lista_@(jogo.JogoId)_@(lista.ListaJogoId)"
                                                            @(marcado ? "checked" : "")
                                                                   onchange="atualizarLista(this, @jogo.JogoId, '@lista.Nome')" />
                                                            <label class="form-check-label" for="lista_@(jogo.JogoId)_@(lista.ListaJogoId)">
                                                                @lista.Nome
                                                            </label>
                                                        </div>

                                                    }
                                                }
                                                else
                                                {
                                                    <p class="text-muted">Você ainda não tem listas.</p>
                                                }
                                            </div>

                                            <form asp-controller="ListaJogo" asp-action="CriarLista" method="post" class="mt-3 d-flex">
                                                <input type="hidden" name="jogoId" value="@jogo.JogoId" />
                                                <input type="text" name="nomeLista" class="form-control me-2" placeholder="Nova lista..." required />
                                                <button type="submit" class="btn btn-outline-light">
                                                    <i class="fas fa-plus"></i>
                                                </button>
                                            </form>
                                        </div>
                                    }
                                    else
                                    {
                                        <a asp-controller="Account" asp-action="Login"
                                           asp-route-returnUrl="@Url.Action("Details", "Jogo", new { jogoId = jogo.JogoId })"
                                           class="btn btn-success w-100 d-flex align-items-center justify-content-center">
                                            <i class="fas fa-folder-plus me-2"></i> Adicionar à Lista
                                        </a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


<style>
    body {
        font-family: Arial, sans-serif;
    }

    .bg-roxo-claro {
        background: linear-gradient(145deg, #3e0070, #4e008a);
        border: 1px solid #6a0dad44;
        box-shadow: 0 0 10px rgba(122, 0, 200, 0.2);
        border-radius: 15px;
    }

    .btn-outline-purple {
        border: 1px solid #c77dff;
        color: #c77dff;
        transition: 0.3s ease;
    }

        .btn-outline-purple:hover {
            background-color: #c77dff;
            color: white;
        }

    .hover-zoom:hover {
        transform: scale(1.03);
        transition: 0.3s ease;
    }

    .descricao-detalhada {
        background-color: rgba(255, 255, 255, 0.03);
        padding: 20px;
        border-radius: 10px;
        box-shadow: inset 0 0 10px rgba(0, 0, 0, 0.3);
        color: #fff;
    }

        .descricao-detalhada h3,
        .descricao-detalhada h4 {
            color: #c77dff;
        }

    .carousel-container {
        background-color: #2a0042;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 0 12px rgba(0, 0, 0, 0.4);
    }

    .carousel-item img {
        height: 400px;
        object-fit: cover;
    }

    .alert-info {
        background-color: rgba(255, 255, 255, 0.07);
        border-left: 5px solid #ffc107;
        color: #fff;
    }

    .text-purple {
        color: #c77dff !important;
    }

    .hover-zoom:hover {
        transform: scale(1.05);
        transition: 0.3s ease;
    }

    .fs-5 {
        font-size: 1.25rem;
    }

</style>