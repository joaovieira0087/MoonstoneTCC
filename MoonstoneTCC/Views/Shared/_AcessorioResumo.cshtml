@model MoonstoneTCC.Models.Acessorio

<div class="col">
    <div class="card h-100 bg-dark text-white shadow-sm">
        <img src="@Model.ImagemUrl" class="card-img-top" alt="@Model.Nome">
        <div class="card-body">
            <h5 class="card-title">@Model.Nome</h5>
            <p class="card-text">R$ @((Model.PrecoPromocional ?? Model.Preco).ToString("F2"))</p>
            <a asp-controller="Acessorio" asp-action="Details" asp-route-acessorioId="@Model.AcessorioId" class="btn btn-outline-light">Ver detalhes</a>
        </div>
    </div>
</div>
