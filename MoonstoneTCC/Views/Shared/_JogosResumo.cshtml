@model MoonstoneTCC.Models.Jogo

@{
    var homeModel = ViewData["HomeModel"] as MoonstoneTCC.ViewModels.HomeViewModel;
    var ranking = homeModel?.RankingMaisVendidos?.FirstOrDefault(r => r.JogoId == Model.JogoId);
    var listasDoUsuario = homeModel?.ListasDoUsuario; // <-- nome diferente
}



<div class="col">
    <div class="card h-100 card-moonstone">
        <a asp-controller="Jogo" asp-action="Details" asp-route-jogoId="@Model.JogoId" class="text-decoration-none">
            <div class="position-relative">

                <!-- Badge de Ranking -->
                @if (ranking.HasValue && ranking.Value.Posicao > 0)
                {
                    <div class="ranking-badge-roxo">
                        @(ranking.Value.Posicao == 1 ? "MAIS VENDIDO" : $"{ranking.Value.Posicao} MAIS VENDIDO")
                    </div>
                }

                <!-- Capa do jogo -->
                <img src="@Model.ImagemUrl" alt="@Model.Nome"
                     class="card-img-top jogo-thumb border-bottom border-purple" />

                <!-- Classificação etária -->
                <div class="position-absolute top-0 end-0 m-2">
                    <img src="@Model.ClassificacaoEtariaImagemUrl" alt="Classificação"
                         class="rounded-circle border border-white" style="width: 48px; height: 48px;" />
                </div>
            </div>
        </a>

        <div class="card-body d-flex flex-column px-3 pt-3 pb-0 text-white">
            <h5 class="card-title text-center fw-bold mb-2">
                <a asp-controller="Jogo" asp-action="Details" asp-route-jogoId="@Model.JogoId" class="text-light text-decoration-none hover-purple">
                    @Model.Nome
                </a>
            </h5>
            @{
                var media = Model.AvaliacaoMedia; // Isso deve vir da propriedade calculada no Jogo.cs
                var porcentagemEstrelas = (media / 5.0) * 100;
                var totalAvaliacoes = Model.Comentarios?.Count ?? 0;
            }

            <div class="d-flex align-items-center justify-content-center mb-2">
                <div class="stars-outer me-2">
                    <div class="stars-inner" style="width: @porcentagemEstrelas%;"></div>
                </div>
                <span class="text-white small">(@totalAvaliacoes)</span>
            </div>






            <div class="text-center small text-muted mb-2">
                <i class="fa-solid fa-gamepad me-1"></i>@Model.Genero &nbsp;&nbsp;
                <i class="fa-solid fa-laptop me-1"></i>@Model.Plataformas
            </div>

            <p class="fw-semibold text-center mb-3 fs-6">
                @if (Model.PrecoPromocional != null && Model.PorcentagemDesconto != null)
                {
                    <span class="text-muted text-decoration-line-through me-2">@Model.Preco.ToString("C")</span>
                    <span class="text-danger fw-bold">@Model.PrecoPromocional?.ToString("C")</span>
                    <span class="badge bg-success ms-2">-@Model.PorcentagemDesconto%</span>
                }
                else
                {
                    <span class="text-white">@Model.Preco.ToString("C")</span>
                }
            </p>
        </div>

        <div class="card-footer bg-transparent border-0 p-3 pt-0">
            <div class="row g-2">
                <!-- FAVORITAR -->
                <div class="col-6">
                    @if (User.Identity.IsAuthenticated)
                    {
                        var ehFavorito = ViewBag.EhFavorito != null && (bool)ViewBag.EhFavorito;

                        <form asp-controller="Favorito" asp-action="@(ehFavorito ? "Remover" : "Adicionar")" method="post">
                            <input type="hidden" name="jogoId" value="@Model.JogoId" />
                            <button type="submit" class="btn btn-warning w-100 d-flex align-items-center justify-content-center">
                                <i class="fas fa-heart me-2"></i> @(ehFavorito ? "Remover" : "Favoritar")
                            </button>
                        </form>
                    }
                    else
                    {
                        <a asp-controller="Account" asp-action="Login"
                           asp-route-returnUrl="@Url.Action("Details", "Jogo", new { jogoId = Model.JogoId })"
                           class="btn btn-warning w-100 d-flex align-items-center justify-content-center">
                            <i class="fas fa-heart me-2"></i> Favoritar
                        </a>
                    }
                </div>

                <!-- LISTAS -->
                <div class="col-6 position-relative">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <button class="btn btn-success w-100 d-flex align-items-center justify-content-center" id="abrirListasBtn-@Model.JogoId" type="button"
                                onclick="document.getElementById('painelListas-@Model.JogoId').style.display='block'">
                            <i class="fas fa-folder-plus me-2"></i> Lista
                        </button>

                        <div id="painelListas-@Model.JogoId" class="card text-white bg-dark border-light mt-2 p-3"
                             style="display:none; position:absolute; z-index:10; width: 300px;">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <strong>Salvar em...</strong>
                                <button type="button" class="btn-close btn-close-white" aria-label="Fechar"
                                        onclick="document.getElementById('painelListas-@Model.JogoId').style.display='none'"></button>
                            </div>

                            <div class="mb-2">
                                @{
                                    var listas = ViewBag.ListasDoUsuario as List<MoonstoneTCC.Models.ListaJogo>;
                                    var listasMarcadas = ViewBag.ListasMarcadas as List<int> ?? new List<int>();
                                }

                                @if (listasDoUsuario != null && listasDoUsuario.Any())
                                {
                                    foreach (var lista in listasDoUsuario)
                                    {
                                        var marcado = listasMarcadas.Contains(lista.ListaJogoId);
                                        <div class="form-check">
                                            <input class="form-check-input lista-checkbox"
                                                   type="checkbox"
                                                   value="@lista.ListaJogoId"
                                                   id="lista_@lista.ListaJogoId"
                                            @(marcado ? "checked" : "")
                                                   onchange="atualizarLista(this, @Model.JogoId, '@lista.Nome')" />
                                            <label class="form-check-label" for="lista_@lista.ListaJogoId">
                                                @lista.Nome
                                            </label>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <p class="text-muted">Você ainda não tem listas.</p>
                                }
                            </div>

                            <form asp-controller="ListaJogo" asp-action="CriarLista" method="post" class="mt-3 d-flex">
                                <input type="hidden" name="jogoId" value="@Model.JogoId" />
                                <input type="text" name="nomeLista" class="form-control me-2" placeholder="Nova lista..." required />
                                <button type="submit" class="btn btn-outline-light">
                                    <i class="fas fa-plus"></i>
                                </button>
                            </form>
                        </div>
                    }
                    else
                    {
                        <a asp-controller="Account" asp-action="Login"
                           asp-route-returnUrl="@Url.Action("Details", "Jogo", new { jogoId = Model.JogoId })"
                           class="btn btn-success w-100 d-flex align-items-center justify-content-center">
                            <i class="fas fa-folder-plus me-2"></i> Lista
                        </a>
                    }
                </div>
            </div>
        </div>

    </div>
</div>

<style>
    /* CARD ESTILO FUTURISTA */
    .card-moonstone {
        background: linear-gradient(145deg, #1c0c2b, #2a1241);
        border: 1px solid #3b0056;
        border-radius: 15px;
        box-shadow: 0 0 20px rgba(126, 0, 200, 0.2);
        transition: all 0.3s ease;
    }

        .card-moonstone:hover {
            transform: translateY(-8px);
            box-shadow: 0 0 25px rgba(157, 60, 230, 0.4);
        }

    .jogo-thumb {
        object-fit: cover;
        aspect-ratio: 4 / 5;
        border-radius: 0;
    }

    .ranking-badge-roxo {
        position: absolute;
        top: 10px;
        left: 10px;
        background-color: #9d3ce6;
        color: white;
        padding: 6px 12px;
        font-weight: bold;
        border-radius: 8px;
        font-size: 0.65rem;
        box-shadow: 0 0 10px rgba(157, 60, 230, 0.6);
        z-index: 10;
    }

    .btn-purple-glow {
        background: #7e00c8;
        color: white;
        border: none;
        font-weight: bold;
        font-size: 0.95rem;
        border-radius: 8px;
        padding: 0.6rem 1rem;
        transition: all 0.3s ease;
    }

        .btn-purple-glow:hover {
            background: #9d3ce6;
            box-shadow: 0 0 12px rgba(157, 60, 230, 0.5);
        }

    .hover-purple:hover {
        color: #9d3ce6 !important;
    }

    .border-purple {
        border-color: #9d3ce6 !important;
    }

    .text-purple {
        color: #9d3ce6;
    }

    .stars-outer {
        position: relative;
        display: inline-block;
        font-family: FontAwesome;
        color: #ccc;
    }

    .stars-inner {
        position: absolute;
        top: 0;
        left: 0;
        white-space: nowrap;
        overflow: hidden;
        color: #FFA500;
    }

        .stars-outer::before,
        .stars-inner::before {
            content: "\f005\f005\f005\f005\f005"; /* 5 estrelas */
            font-family: 'Font Awesome 5 Free';
            font-weight: 900;
        }


</style>
