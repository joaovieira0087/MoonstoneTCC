    <style>
        /* =========================
           Moonstone — Top Navbar UI
           Paleta + componentes base
           ========================= */

        /* Fundo global do site (como era antes) */
        html, body {
            background-color: #3A0066 !important;
            background-image: none !important;
        }

        /* opcional: se algum wrapper estiver pintando o fundo, deixe transparente */
        main, .page-wrapper, .site-content, .container, .container-fluid {
            background: transparent !important;
        }


        /* Paleta do topo usada só dentro do <header>  */
        header {
            --nav-bg-1: #2a0044;
            --nav-bg-2: #4a007f;
            --surface-1: #3b0056;
            --surface-2: #2b0048;
            --border: rgba(255,255,255,.16);
            --text: #ffffff;
            --text-muted: #cfcfe6;
            --placeholder: #b8a9c9;
            --accent: #b84dff;
            --accent-2: #00d0ff;
            --shadow-1: 0 10px 26px rgba(0,0,0,.35);
            --shadow-2: 0 8px 18px rgba(0,0,0,.30); */
        }


        /* ============= NAVBAR ============ */
        
        .navbar {
        background: linear-gradient(180deg, var(--nav-bg-1), var(--nav-bg-2)); 
            border-bottom: 1px solid var(--border);
            box-shadow: var(--shadow-1);
        }

        .navbar-brand img {
            height: 52px;
        }

        .navbar-collapse {
            gap: 10px;
        }

        .navbar-nav .nav-link {
            color: var(--text) !important;
            font-weight: 700;
            letter-spacing: .2px;
        }

        /* Toggler (mobile) */
        .navbar-toggler {
            border: 1px solid rgba(255,255,255,.35);
            border-radius: 10px;
        }

            .navbar-toggler:focus {
                box-shadow: 0 0 0 2px var(--accent);
            }

        /* ============= BOTÕES REDONDOS (ícones) ============= */

        .btn-icon {
            width: 48px;
            height: 48px;
            display: grid;
            place-items: center;
            border-radius: 50%;
            background: radial-gradient(120% 120% at 30% 20%, var(--surface-1), var(--surface-2));
            color: var(--text) !important;
            border: 1px solid var(--border);
            box-shadow: var(--shadow-2);
            transition: transform .12s ease, background .2s ease, border-color .2s ease;
        }

            .btn-icon:hover {
                transform: translateY(-1px);
                background: radial-gradient(120% 120% at 30% 20%, #4b0a8e, var(--surface-1));
                border-color: rgba(255,255,255,.28);
            }

        /* ============= CATEGORIA (pílula) ============= */
        /* No Razor vou colocar a classe .btn-category no botão “Jogos” */
        .btn-category {
            height: 48px;
            padding: 0 18px;
            border-radius: 999px;
            color: var(--text);
            font-weight: 800;
            background: linear-gradient(135deg, #5b10a6, #8a3ad6);
            border: 1px solid rgba(255,255,255,.18);
            box-shadow: var(--shadow-2);
            display: inline-flex;
            align-items: center;
            gap: 10px;
        }

            .btn-category:hover {
                background: linear-gradient(135deg, #6a20b8, #9b4ff0);
                color: #fff;
            }

            .btn-category:focus-visible {
                outline: 2px solid var(--accent);
                outline-offset: 2px;
            }

        /* ============= BARRA DE PESQUISA (glass roxo) ============= */

        .search-form {
            flex: 1 1 auto;
        }

        .search-bar {
            width: clamp(360px, 48vw, 820px);
            display: flex;
            align-items: center;
            gap: 10px;
            padding: 10px 14px 10px 16px;
            border-radius: 999px;
            background: rgba(255,255,255,.08);
            border: 1px solid rgba(255,255,255,.22);
            box-shadow: inset 0 0 0 1px rgba(255,255,255,.04), var(--shadow-2);
            transition: border-color .2s ease, box-shadow .2s ease, background .2s ease;
        }

            .search-bar:hover,
            .search-bar:focus-within {
                background: rgba(255,255,255,.12);
                border-color: rgba(255,255,255,.32);
                box-shadow: inset 0 0 0 1px rgba(255,255,255,.06), 0 14px 26px rgba(0,0,0,.38);
            }

        .search-input {
            flex: 1 1 auto;
            background: transparent;
            border: 0;
            outline: 0;
            color: var(--text);
            font-size: 16px;
            padding: 8px 6px;
            min-width: 120px;
            caret-color: var(--accent);
        }

            .search-input::placeholder {
                color: var(--placeholder);
            }

        /* Botão de enviar (lupa) */
        .search-btn {
            width: 40px;
            height: 40px;
            border: 0;
            border-radius: 50%;
            display: grid;
            place-items: center;
            color: #fff;
            background: linear-gradient(135deg, #6a20b8, #9b4ff0);
            box-shadow: var(--shadow-2);
            transition: transform .12s ease, filter .2s ease;
        }

            .search-btn:hover {
                transform: translateY(-1px);
                filter: brightness(1.05);
            }

            .search-btn:focus-visible {
                outline: 2px solid var(--accent-2);
                outline-offset: 2px;
            }

            /* Ícone herda o tamanho do botão */
            .search-btn i {
                font-size: 18px;
            }

        /* ============= AUTO-SUGESTÕES ============= */

        .search-suggestions {
            position: absolute;
            left: 0;
            top: calc(100% + 8px);
            width: 100%;
            background: linear-gradient(180deg, var(--surface-1), var(--surface-2));
            border: 1px solid var(--border);
            border-radius: 14px;
            box-shadow: var(--shadow-1);
            display: none;
            z-index: 1000;
            overflow: hidden;
        }

        .search-bar:focus-within .search-suggestions {
            display: block;
        }

        .suggestion-item {
            display: flex;
            align-items: center;
            gap: 10px;
            padding: 10px 12px;
            color: var(--text);
            background: transparent;
            border-bottom: 1px solid rgba(255,255,255,.06);
            transition: background .2s ease;
            cursor: pointer;
        }

            .suggestion-item:last-child {
                border-bottom: 0;
            }

            .suggestion-item:hover {
                background: rgba(255,255,255,.06);
            }

        .suggestion-img {
            width: 42px;
            height: 42px;
            object-fit: cover;
            border-radius: 8px;
        }

        .suggestion-text {
            font-weight: 700;
            color: var(--text);
        }

        .suggestion-extra {
            font-size: .78rem;
            color: var(--text-muted);
        }

        .highlight {
            background: var(--accent);
            color: #fff;
            padding: 2px 4px;
            border-radius: 4px;
        }

        .suggestion-ver-todos {
            text-align: center;
            padding: 10px 12px;
            background: rgba(255,255,255,.04);
            color: var(--text-muted);
        }

            .suggestion-ver-todos:hover {
                background: rgba(255,255,255,.08);
                color: #fff;
            }

        /* ============= DROPDOWN “AMAZON STYLE” ============= */

        .dropdown-amazon-style {
            width: 360px;
            max-height: 90vh;
            position: absolute;
            top: 65px;
            right: 15px;
            background: linear-gradient(180deg, var(--surface-1), var(--surface-2));
