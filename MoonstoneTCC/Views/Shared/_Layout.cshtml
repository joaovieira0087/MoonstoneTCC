    <script>
       document.addEventListener("DOMContentLoaded", function () {
    const hamburgerMenu = document.getElementById("hamburgerMenu");
    const dropdownMenu = document.getElementById("dropdownMenu");
    const menuAviso = document.getElementById("menuAviso");
    let menuAvisoJaMostrado = false;
    const mostrarMais = document.getElementById("mostrarMais");
    const fecharExtras = document.getElementById("fecharExtras");
    const opcoesExtras = document.getElementById("opcoesExtras");

    // Alterna a visibilidade com classe .show (pode estilizar via CSS se quiser)
    hamburgerMenu.addEventListener("click", function () {
        dropdownMenu.classList.toggle("show");

        // Mostra o aviso se ainda não foi mostrado
        if (!menuAvisoJaMostrado) {
            menuAviso.style.display = "block";
            setTimeout(() => {
                menuAviso.style.display = "none";
            }, 4000); // oculta após 4 segundos
            menuAvisoJaMostrado = true;
        }

    });

    // Fecha o menu ao clicar fora
    document.addEventListener("click", function (event) {
        if (!dropdownMenu.contains(event.target) && !hamburgerMenu.contains(event.target)) {
            dropdownMenu.classList.remove("show");
            // também esconde opções extras e mostra botão "Mais"
            opcoesExtras.style.display = "none";
            mostrarMais.style.display = "block";
        }
    });

    // Mostrar opções extras
    mostrarMais.addEventListener("click", function (e) {
        e.preventDefault();
        opcoesExtras.style.display = "block";
        this.style.display = "none";
    });

    // Esconder opções extras
    fecharExtras.addEventListener("click", function (e) {
        e.preventDefault();
        opcoesExtras.style.display = "none";
        mostrarMais.style.display = "block";
    });
});




    // SPRIPT DE RECOMENDAÇÕES DE BUSCA
        // Debounce para evitar muitas requisições
        let debounceTimer;

        // Evento: ao digitar no campo
        searchInput.addEventListener('input', function () {
            clearTimeout(debounceTimer);
            const termo = this.value;

            debounceTimer = setTimeout(() => {
                carregarSugestoes(termo);
            }, 300);
        });

        // Evento: ao clicar no campo (foco)
        searchInput.addEventListener('focus', function () {
            if (!this.value.trim()) {
                suggestionsList.innerHTML = ""; // limpa antes
                carregarMaisBuscadosInstantaneo(); // nova função sem delay
            }
        });

        // Esconder sugestões ao clicar fora
        document.addEventListener('click', function (event) {
            const isClickInside = searchInput.contains(event.target) || suggestionsList.contains(event.target);
            if (!isClickInside) suggestionsList.style.display = "none";
        });

        // Função para carregar sugestões
        function carregarSugestoes(termo) {
            suggestionsList.innerHTML = "";
            if (!termo.trim()) {
                carregarMaisBuscadosInstantaneo();
                return;
            }

            fetch(`/Jogo/BuscarSugestoes?termo=${encodeURIComponent(termo)}`)
                .then(response => response.json())
                .then(data => {
                    if (data.length === 0) {
                        suggestionsList.style.display = "none";
                        return;
                    }

                    // Ordenação inteligente: prioriza quem começa com o termo
                    const termoLower = termo.toLowerCase();
                    data.sort((a, b) => {
                        const aIndex = a.nome.toLowerCase().indexOf(termoLower);
                        const bIndex = b.nome.toLowerCase().indexOf(termoLower);
                        return aIndex - bIndex;
                    });

                    suggestionsList.style.display = "block";

                    data.forEach(item => {
                        const div = document.createElement("div");
                        div.classList.add("suggestion-item");

                        const nomeLower = item.nome.toLowerCase();
                        const index = nomeLower.indexOf(termoLower);

                        let nomeFormatado = item.nome;
                        if (index >= 0) {
                            const before = item.nome.substring(0, index);
                            const match = item.nome.substring(index, index + termo.length);
                            const after = item.nome.substring(index + termo.length);
                            nomeFormatado = `${before}<span class="highlight">${match}</span>${after}`;
                        }

                        // Rota e subtítulo
                        let rota = "#";
                        if (item.tipo === "Jogo") rota = `/Jogo/Details?jogoId=${item.id}`;
                        else if (item.tipo === "Desenvolvedora") rota = `/Desenvolvedora/Perfil/${item.id}`;
                        else if (item.tipo === "Usuario") rota = `/Usuario/Perfil/${item.id}`;

                        const subtitulo = item.sub || "";

                        div.innerHTML = `
                            <img src="${item.imagem}" class="suggestion-img ${item.tipo === 'Usuario' ? 'rounded-circle border border-purple' : ''}" style="width: 40px; height: 40px;" alt="${item.nome}">
                            <div class="d-flex flex-column justify-content-center">
                                <strong class="suggestion-text">${nomeFormatado}</strong>
                                <small class="suggestion-extra">${subtitulo}</small>
                            </div>
                        `;

                        div.addEventListener("click", () => window.location.href = rota);
                        suggestionsList.appendChild(div);
                    });

                    // Botão para ver todos os resultados
                    const verTodos = document.createElement("div");
                    verTodos.classList.add("suggestion-ver-todos");
                    verTodos.innerHTML = `🔍 Ver todos os resultados para <strong>"${termo}"</strong>`;
                    verTodos.addEventListener("click", () => searchInput.form.submit());
                    suggestionsList.appendChild(verTodos);
                })
                .catch(err => {
                    console.error("Erro ao buscar sugestões:", err);
                    suggestionsList.style.display = "none";
                });
        }

        // Função para mais buscados ao clicar no campo
        function carregarMaisBuscadosInstantaneo() {
            fetch('/Tendencias/MaisBuscados')
                .then(res => res.json())
                .then(data => {
                    if (data.length === 0) {
                        suggestionsList.style.display = "none";
                        return;
                    }

                    suggestionsList.style.display = "block";

                    const verMais = document.createElement("div");
                    verMais.classList.add("suggestion-ver-todos");
                    verMais.innerHTML = `Ver todos os mais buscados`;
                    verMais.addEventListener("click", () => window.location.href = `/Tendencias/List`);
                    suggestionsList.appendChild(verMais);

                    data.forEach(jogo => {
                        const item = document.createElement("div");
                        item.classList.add("suggestion-item");
                        item.innerHTML = `
                            <img src="${jogo.imagemUrl}" class="suggestion-img" alt="${jogo.nome}">
                            <div>
                                <span class="suggestion-text">${jogo.nome}</span><br>
                                <small class="suggestion-extra">${jogo.genero || ""}</small>
                            </div>
                        `;
                        item.addEventListener("click", () => window.location.href = `/Jogo/Details?jogoId=${jogo.id}`);
                        suggestionsList.appendChild(item);
                    });
                });
        }

 


    </script>

