@model MoonstoneTCC.Models.GamificacaoUsuario
@{
    ViewData["Title"] = "Meu Progresso de Recompensas";
    // Cálculo da porcentagem para o gráfico
    var porcentagem = (Model.XPAtual / 100.0) * 100;
}

<style>
    .reward-container {
        color: #fff;
        font-family: 'Inter', sans-serif;
    }

    .glass-card {
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255,255,255,0.08);
        border-radius: 24px;
        backdrop-filter: blur(12px);
        padding: 30px;
    }

    /* Gráfico de Progresso Circular */
    .progress-ring {
        position: relative;
        width: 180px;
        height: 180px;
        border-radius: 50%;
        background: conic-gradient(#0ea5e9 @(porcentagem) %, #1e1e26 0);
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 0 30px rgba(14, 165, 233, 0.2);
    }

        .progress-ring::before {
            content: "";
            position: absolute;
            width: 150px;
            height: 150px;
            background: #0b0b10;
            border-radius: 50%;
        }

    .progress-data {
        position: relative;
        text-align: center;
        z-index: 2;
    }

    .xp-val {
        font-size: 2.8rem;
        font-weight: 800;
        color: #fff;
        line-height: 1;
    }

    .stat-box {
        background: rgba(255,255,255,0.02);
        border-radius: 16px;
        padding: 20px;
        border: 1px solid rgba(255,255,255,0.05);
    }
</style>

<div class="container reward-container py-5">
    <div class="text-center mb-5">
        <h2 class="fw-bold"><i class="fas fa-medal text-warning me-2"></i>Nível de Avaliador</h2>
        <p class="text-white-50">Avalie jogos comprados para subir de nível e ganhar saldo virtual!</p>
    </div>

    <div class="row g-4 justify-content-center">
        <div class="col-md-5">
            <div class="glass-card text-center h-100 d-flex flex-column align-items-center justify-content-center">
                <span class="text-uppercase small fw-bold text-info mb-4">Progresso para R$ 5,00</span>

                <div class="progress-ring">
                    <div class="progress-data">
                        <div class="xp-val">@Model.XPAtual</div>
                        <div class="small text-white-50">/ 100 XP</div>
                    </div>
                </div>

                <div class="mt-4">
                    <h4 class="mb-1">@porcentagem% Completo</h4>
                    <p class="text-muted small">Ganhe mais @(100 - Model.XPAtual) XP para o próximo resgate.</p>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="glass-card h-100">
                <h5 class="mb-4 fw-bold">Suas Conquistas</h5>

                <div class="row g-3">
                    <div class="col-sm-6">
                        <div class="stat-box">
                            <i class="fas fa-gamepad text-primary mb-2"></i>
                            <div class="text-white-50 small">Avaliações</div>
                            <div class="fs-4 fw-bold">@Model.TotalAvaliacoesRealizadas</div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="stat-box">
                            <i class="fas fa-hand-holding-usd text-success mb-2"></i>
                            <div class="text-white-50 small">Saldo Ganho</div>
                            <div class="fs-4 fw-bold text-success">R$ @(Model.ResgatesEfetuados * 5),00</div>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="stat-box mt-2">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <div class="text-white-50 small">XP Total Acumulado</div>
                                    <div class="fw-bold">@Model.XPTotalAcumulado XP</div>
                                </div>
                                <i class="fas fa-chart-line fa-2x opacity-25"></i>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="mt-4 pt-3 border-top border-white border-opacity-10 text-center">
                    <p class="small text-white-50">Cada avaliação de jogo rende <strong>10 XP</strong>.</p>
                    <a asp-controller="MeusPedidos" asp-action="Avaliar" class="btn btn-outline-info btn-sm w-100">
                        <i class="fas fa-plus me-1"></i> Avaliar novos jogos
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>