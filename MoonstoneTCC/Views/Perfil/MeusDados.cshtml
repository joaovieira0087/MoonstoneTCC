@model MoonstoneTCC.ViewModels.UserProfileViewModel

@{
    ViewData["Title"] = "Meus Dados";
}

<div class="container my-5">
    <h3 class="text-white mb-4"><i class="fas fa-user-circle"></i> Meus Dados Cadastrados</h3>
    <hr class="bg-light" />

    <form class="form-horizontal">
        <div class="row mb-4">
            <div class="form-group col-md-6">
                <label class="form-label text-white">Nome</label>
                <input class="form-control border-primary" value="@Model.Nome" readonly />
            </div>
            <div class="form-group col-md-6">
                <label class="form-label text-white">Sobrenome</label>
                <input class="form-control border-primary" value="@Model.Sobrenome" readonly />
            </div>
        </div>

        <div class="row mb-4">
            <div class="form-group col-md-6">
                <label class="form-label text-white">Endereço</label>
                <input class="form-control border-warning" value="@Model.Endereco1" readonly />
            </div>
            <div class="form-group col-md-6">
                <label class="form-label text-white">Complemento</label>
                <input class="form-control border-warning" value="@Model.Endereco2" readonly />
            </div>
        </div>

        <div class="row mb-4">
            <div class="form-group col-md-4">
                <label class="form-label text-white">CEP</label>
                <input class="form-control border-danger" value="@Model.Cep" readonly />
            </div>
            <div class="form-group col-md-4">
                <label class="form-label text-white">Cidade</label>
                <input class="form-control border-success" value="@Model.Cidade" readonly />
            </div>
            <div class="form-group col-md-4">
                <label class="form-label text-white">Estado</label>
                <input class="form-control border-success" value="@Model.Estado" readonly />
            </div>
        </div>

        <div class="row mb-4">
            <div class="form-group col-md-6">
                <label class="form-label text-white">Telefone</label>
                <input class="form-control border-info" value="@Model.Telefone" readonly />
            </div>
            <div class="form-group col-md-6">
                <label class="form-label text-white">Email</label>
                <input class="form-control border-info" value="@Model.Email" readonly />
            </div>
        </div>

        <div class="mt-3">
            <a class="btn btn-outline-light" asp-action="Index" asp-controller="Perfil">
                <i class="fas fa-arrow-left"></i> Voltar para o painel
            </a>
        </div>
    </form>
</div>

<style>
    label {
        font-weight: bold;
    }
</style>
