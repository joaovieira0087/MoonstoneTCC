@model MoonstoneTCC.Models.ViewModels.DepositoViewModel
@{
    ViewData["Title"] = "Adicionar saldo";
    ViewData["HideFooter"] = true;
}

<style>
    :root {
        --roxo: #3b0056;
        --roxo-escuro: #240038;
        --azul: #0ea5e9;
        --azul-escuro: #0284c7;
        --txt: #f8f9fa;
        --txt-muted: #b8b8c2;
        --borda: rgba(255,255,255,.1);
        --erro: #ff6b6b;
    }

    body {
        background-color: #0b0b10; /* Fundo geral */
    }

    .card-neo {
        background: radial-gradient(120% 120% at 0% 0%, var(--roxo) 0%, var(--roxo-escuro) 60%), #12121a;
        color: var(--txt);
        border: 1px solid var(--borda);
        border-radius: 24px;
        box-shadow: 0 20px 40px rgba(0,0,0,0.3);
    }

    .input-group-text {
        background: rgba(255,255,255,0.05);
        color: var(--azul);
        border: 1px solid var(--borda);
        border-right: none;
    }

    .form-control {
        background: rgba(255,255,255,0.05);
        color: #fff;
        border: 1px solid var(--borda);
        border-left: none;
        font-size: 1.2rem;
        font-weight: 600;
    }

        .form-control:focus {
            background: rgba(255,255,255,0.08);
            color: #fff;
            border-color: var(--azul);
            box-shadow: none;
        }

    /* Validação do ASP.NET */
    .field-validation-error {
        color: var(--erro);
        font-size: 0.85rem;
        margin-top: 0.25rem;
        display: block;
    }

    .quick-amt .btn {
        border: 1px solid var(--borda);
        background: rgba(255,255,255,.03);
        color: #e9e9f2;
        padding: .6rem 1rem;
        border-radius: 12px;
        transition: all 0.2s;
    }

        .quick-amt .btn:hover {
            background: var(--azul);
            border-color: var(--azul);
            color: #fff;
            transform: translateY(-2px);
        }

    .btn-action {
        background-color: var(--azul);
        color: white;
        border: none;
        font-weight: 600;
        padding: 12px;
        border-radius: 12px;
        transition: 0.3s;
    }

        .btn-action:hover {
            background-color: var(--azul-escuro);
            color: white;
        }

    .btn-outline-back {
        border: 1px solid var(--borda);
        color: var(--txt-muted);
        border-radius: 12px;
        padding: 12px;
    }

        .btn-outline-back:hover {
            background: rgba(255,255,255,0.05);
            color: white;
        }
</style>



<div class="container mt-5" style="max-width:600px;">

    <div class="d-flex align-items-center justify-content-between mb-4">
        <div>
            <h3 class="fw-bold text-white mb-0"><i class="fa fa-wallet me-2"></i>Adicionar Saldo</h3>
            <span class="mini" style="color: var(--txt-muted)">Simulação de Gateway de Pagamento</span>
        </div>
    </div>

    <div class="card-neo p-4 p-md-5">

        <div asp-validation-summary="ModelOnly" class="alert alert-danger bg-transparent text-danger border-danger mb-4"></div>

        <form asp-controller="Carteira" asp-action="AdicionarSaldo" method="post" id="form-deposito">

            <div class="mb-4">
                <label asp-for="Valor" class="form-label text-white-50 small text-uppercase fw-bold ls-1">Valor do Depósito</label>
                <div class="input-group input-group-lg">
                    <span class="input-group-text">R$</span>
                    <input asp-for="Valor"
                           class="form-control"
                           placeholder="0,00"
                           autocomplete="off"
                           type="number" step="0.01" />
                </div>
                <span asp-validation-for="Valor"></span>
            </div>

            <div class="mb-4">
                <label class="form-label text-white-50 small mb-2">Sugestões</label>
                <div class="d-flex flex-wrap gap-2 quick-amt">
                    <button type="button" class="btn btn-sm" data-valor="10">R$ 10</button>
                    <button type="button" class="btn btn-sm" data-valor="25">R$ 25</button>
                    <button type="button" class="btn btn-sm" data-valor="50">R$ 50</button>
                    <button type="button" class="btn btn-sm" data-valor="100">R$ 100</button>
                    <button type="button" class="btn btn-sm" data-valor="200">R$ 200</button>
                </div>
            </div>

            <div class="d-grid gap-3">
                <button type="submit" class="btn btn-action btn-lg w-100 shadow-lg">
                    <i class="fa fa-check-circle me-2"></i> Confirmar Pagamento
                </button>

                <a asp-controller="Carteira" asp-action="Index" class="btn btn-outline-back w-100 text-center text-decoration-none">
                    Cancelar e Voltar
                </a>
            </div>

            <div class="text-center mt-3">
                <small class="text-muted" style="font-size: 0.75rem;">
                    <i class="fa fa-lock me-1"></i> Ambiente seguro (Simulado)
                </small>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const input = document.getElementById('Valor'); // ID gerado pelo asp-for
            const buttons = document.querySelectorAll('.quick-amt [data-valor]');
            const form = document.getElementById('form-deposito');

            // Lógica dos botões rápidos
            buttons.forEach(b => {
                b.addEventListener('click', () => {
                    const v = b.getAttribute('data-valor');
                    input.value = v;
                    // Dispara validação visual se necessário
                    input.focus();
                });
            });

            // Loading no submit
            form.addEventListener('submit', function (e) {
                if (!$(form).valid()) return; // Se a validação do ASP.NET falhar, não faz loading

                const btn = form.querySelector('button[type="submit"]');
                const originalText = btn.innerHTML;

                if (btn) {
                    btn.disabled = true;
                    btn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span> Processando...';

                    // Timeout de segurança caso o back trave (opcional)
                    setTimeout(() => {
                        btn.disabled = false;
                        btn.innerHTML = originalText;
                    }, 8000);
                }
            });
        });
    </script>
}