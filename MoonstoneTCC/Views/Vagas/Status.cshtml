@model List<MoonstoneTCC.Models.Candidatura>
@{
    ViewData["Title"] = "Minhas Candidaturas";
}

@if (TempData["Erro"] != null)
{
    <div class="alert alert-danger">
        @TempData["Erro"]
    </div>
}

<section class="container py-5">
    <h2 class="mb-4 text-white"><i class="fa fa-briefcase me-2"></i>Minhas Candidaturas</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info">Você ainda não se candidatou a nenhuma vaga.</div>
    }
    else
    {
        foreach (var c in Model)
        {
            <div class="card mb-4 shadow-sm">
                <div class="card-header d-flex justify-content-between align-items-center bg-dark text-white">
                    <div>
                        <strong>@c.Vaga.Titulo</strong><br />
                        <small class="text-muted">@c.Vaga.Cargo</small>
                    </div>
                    <div class="d-flex align-items-center gap-2 position-relative">
                        <span class="badge
                            @(c.Status == "Pendente" ? "bg-warning text-dark" :
                              c.Status == "Em Análise" ? "bg-primary" :
                              c.Status == "Aprovado" ? "bg-success" :
                              c.Status == "Rejeitado" ? "bg-danger" : "bg-secondary")">
                            @c.Status
                        </span>

                        <div class="dropdown">
                            <a href="#" class="text-white" role="button" id="menu-@c.Id"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fa fa-ellipsis-v"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end dropdown-menu-dark" aria-labelledby="menu-@c.Id">
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("Detalhes", "Vagas", new { id = c.VagaEmpregoId })">
                                        <i class="fa fa-eye me-2"></i> Ver Detalhes da Vaga
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("Index", "Vagas")">
                                        <i class="fa fa-list me-2"></i> Ver Todas as Vagas
                                    </a>
                                </li>
                                <li>
                                    <button type="button" class="dropdown-item text-danger" data-bs-toggle="modal" data-bs-target="#modalCancelar-@c.Id">
                                        <i class="fa fa-times me-2"></i> Cancelar Candidatura
                                    </button>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>


                <div class="card-body bg-light">
                    @{
                        var etapasFixas = new[] { "Pendente", "Em Análise", "Entrevista", "Aprovado/Rejeitado" };
                        var etapasConcluidas = new List<string>();

                        // Lógica para preencher etapas concluídas
                        if (c.Status == "Pendente" || c.Status == "Em Análise" || c.Status == "Aprovado" || c.Status == "Rejeitado")
                            etapasConcluidas.Add("Pendente");

                        if (c.Status == "Em Análise" || c.Status == "Aprovado" || c.Status == "Rejeitado")
                            etapasConcluidas.Add("Em Análise");

                        if (c.EntrevistaAgendada != null)
                            etapasConcluidas.Add("Entrevista");

                        if (c.Status == "Aprovado" || c.Status == "Rejeitado")
                            etapasConcluidas.Add("Aprovado/Rejeitado");

                        int etapaPercentual = 100 / etapasFixas.Length;
                    }


                    <div class="progress mb-3" style="height: 28px; border-radius: 8px; overflow: hidden;">
                        @foreach (var etapa in etapasFixas)
                        {
                            var concluida = etapasConcluidas.Contains(etapa);
                            var bgClass = concluida ? "bg-success" : "bg-light text-dark";

                            <div class="progress-bar @bgClass"
                                 role="progressbar"
                                 style="width: @(etapaPercentual)% ; font-size: 0.75rem;"
                                 aria-valuenow="@etapaPercentual" aria-valuemin="0" aria-valuemax="100">
                                @etapa
                            </div>
                        }
                    </div>

                    <p class="mb-1"><i class="fa fa-clock text-secondary me-1"></i><strong>Data de Envio:</strong> @c.DataEnvio.ToString("dd/MM/yyyy HH:mm")</p>

                    @if (!string.IsNullOrWhiteSpace(c.Feedback))
                    {
                        <div class="alert alert-info mt-3 mb-0">
                            <i class="fa fa-info-circle me-1"></i>
                            <strong>Feedback da equipe:</strong><br />
                            @c.Feedback
                        </div>
                    }

                    @if (c.HistoricoStatus != null && c.HistoricoStatus.Any())
                    {
                        <div class="mt-3">
                            <h6 class="mb-1"><i class="fa fa-history me-1"></i>Histórico de Atualizações:</h6>
                            <ul class="list-group list-group-flush">
                                @foreach (var h in c.HistoricoStatus.OrderByDescending(x => x.DataHora))
                                {
                                    <li class="list-group-item px-0">
                                        <i class="fa fa-chevron-right text-muted me-1"></i>
                                        Alterado de <strong>@h.DeStatus</strong> para <strong>@h.ParaStatus</strong> em
                                        <span>@h.DataHora.ToString("dd/MM/yyyy 'às' HH:mm")</span>
                                    </li>
                                }
                            </ul>
                        </div>
                    }

                    @if (c.EntrevistaAgendada != null)
                    {
                        <div class="alert alert-warning mt-3 mb-0">
                            <i class="fa fa-calendar-alt me-1"></i>
                            <strong>Entrevista Agendada:</strong><br />
                            Dia <strong>@c.EntrevistaAgendada.DataHoraEntrevista.ToString("dd/MM/yyyy 'às' HH:mm")</strong><br />
                            @if (!string.IsNullOrWhiteSpace(c.EntrevistaAgendada.Observacoes))
                            {
                                <span class="text-muted">@c.EntrevistaAgendada.Observacoes</span>
                            }
                        </div>
                    }
                </div>
                <form asp-action="EnviarMensagem" method="post" class="mt-3">
                    <input type="hidden" name="candidaturaId" value="@c.Id" />
                    <label class="form-label fw-bold">Alguma dúvida sobre esta vaga?</label>
                    <div class="input-group">
                        <input type="text" name="mensagem" class="form-control" placeholder="Digite sua pergunta..." required />
                        <button type="submit" class="btn btn-outline-primary">Enviar</button>
                    </div>
                </form>
                @if (c.Mensagens != null && c.Mensagens.Any())
                {
                    <div class="mt-3">
                        <h6 class="fw-bold">Mensagens:</h6>
                        <ul class="list-group">
                            @foreach (var msg in c.Mensagens.OrderBy(m => m.DataHora))
                            {
                                <li class="list-group-item">
                                    <span class="badge bg-secondary">@msg.Remetente</span>
                                    <span class="ms-2">@msg.Texto</span>
                                    <span class="float-end text-muted small">@msg.DataHora.ToString("dd/MM HH:mm")</span>
                                </li>
                            }
                        </ul>
                    </div>
                }


            </div>
            <div class="modal fade" id="modalCancelar-@c.Id" tabindex="-1" aria-labelledby="modalLabel-@c.Id" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <form asp-action="CancelarCandidatura" method="post">
                            <input type="hidden" name="candidaturaId" value="@c.Id" />
                            <div class="modal-header">
                                <h5 class="modal-title" id="modalLabel-@c.Id">Cancelar Candidatura</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
                            </div>
                            <div class="modal-body">
                                <p>Tem certeza que deseja cancelar sua candidatura para <strong>@c.Vaga.Titulo</strong>?</p>
                                <div class="mb-3">
                                    <label class="form-label">Motivo (opcional):</label>
                                    <textarea name="motivo" class="form-control" rows="3" placeholder="Escreva se quiser..."></textarea>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                                <button type="submit" class="btn btn-danger">Cancelar Candidatura</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        }
    }
</section>

<style>
    .card {
        border-radius: 12px;
        border: none;
    }

    .card-header {
        border-top-left-radius: 12px;
        border-top-right-radius: 12px;
    }

    .card-body {
        border-bottom-left-radius: 12px;
        border-bottom-right-radius: 12px;
    }

    .table-dark th {
        color: #fff;
    }

    h2, h6 {
        color: #fff;
    }

    .list-group-item {
        background-color: transparent;
        color: #444;
        border: none;
        padding-left: 0;
    }

    .alert {
        border-radius: 10px;
    }

    .dropdown-toggle::after {
        display: none !important;
    }

    .dropdown-menu-dark {
        background-color: #2c2c2c;
        color: #fff;
        border-radius: 8px;
    }

        .dropdown-menu-dark .dropdown-item {
            color: #fff;
        }

            .dropdown-menu-dark .dropdown-item:hover {
                background-color: #444;
            }

</style>
