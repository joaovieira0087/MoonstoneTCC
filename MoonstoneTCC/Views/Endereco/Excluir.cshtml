@model MoonstoneTCC.Models.EnderecoEntrega
@{
    ViewData["Title"] = "Excluir Endereço";
}

<div class="container mt-5 text-light">
    <div class="rounded shadow-lg p-5" style="background: linear-gradient(145deg, #3B0056, #2A003F);">
        <div class="text-center mb-4">
            <h3 class="text-danger fw-bold">
                <i class="fas fa-exclamation-triangle me-2"></i>
                Tem certeza que deseja excluir este endereço?
            </h3>
            <p class="text-light small">Essa ação não poderá ser desfeita.</p>
            <hr class="bg-light" />
        </div>

        <div class="bg-dark rounded p-4 mb-4 border-start border-4 border-danger shadow">
            <p class="mb-2">
                <i class="fas fa-user me-1 text-warning"></i>
                <strong>@Model.Nome @Model.Sobrenome</strong>
            </p>
            <p class="mb-2">
                <i class="fas fa-map-marker-alt me-1 text-purple"></i>
                @Model.Endereco1
                @if (!string.IsNullOrEmpty(Model.Endereco2))
                {
                    <text>, @Model.Endereco2</text>
                }
            </p>
            <p class="mb-2">
                <i class="fas fa-city me-1 text-info"></i>
                @Model.Cidade - @Model.Estado - @Model.Cep
            </p>
            <p class="mb-0">
                <i class="fas fa-phone-alt me-1 text-success"></i> @Model.Telefone
            </p>
        </div>

        <form asp-action="Excluir" method="post" class="text-center">
            <input type="hidden" asp-for="EnderecoEntregaId" />
            <button type="submit" class="btn btn-danger btn-lg px-4 me-3 shadow">
                <i class="fas fa-trash-alt"></i> Sim, Excluir
            </button>
            <a asp-action="Index" class="btn btn-outline-light btn-lg px-4 shadow">
                <i class="fas fa-times-circle"></i> Cancelar
            </a>
        </form>
    </div>
</div>

<style>
    .text-purple {
        color: #B266FF;
    }
</style>
