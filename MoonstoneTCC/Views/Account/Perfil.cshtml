@model MoonstoneTCC.ViewModels.UserProfileViewModel

@{
    ViewData["Title"] = "Perfil do Usuário";
}

<div class="container perfil-container my-5">
    <div class="row">

        <div class="col-md-4 text-center">
            <div class="perfil-sidebar bg-purple-dark rounded p-4">
                <i class="fa-solid fa-user-circle fa-5x text-purple-light"></i>
                <h4 class="mt-3 text-purple-light">Olá, @Model.Nome!</h4>
                <hr class="bg-purple-light" />
                <ul class="perfil-menu list-group text-start">
                    <li class="list-group-item bg-purple-dark border-purple">Meus Dados</li>
                    <li class="list-group-item bg-purple-dark border-purple">Meus Pedidos (@Model.TotalPedidos)</li>
                    <li class="list-group-item bg-purple-dark border-purple">Endereços</li>
                    <li class="list-group-item bg-purple-dark border-purple">Favoritos</li>
                </ul>
            </div>
        </div>

        <div class="col-md-8">
            <div class="perfil-content bg-purple rounded p-4">
                <h4 class="text-purple-light mb-4">Dados Pessoais</h4>
                <dl class="row text-purple-lighter">
                    <dt class="col-sm-3">Nome Completo</dt>
                    <dd class="col-sm-9">@Model.Nome @Model.Sobrenome</dd>

                    <dt class="col-sm-3">Email</dt>
                    <dd class="col-sm-9">@Model.Email</dd>

                    <dt class="col-sm-3">Telefone</dt>
                    <dd class="col-sm-9">@Model.Telefone</dd>

                    <dt class="col-sm-3">Endereço</dt>
                    <dd class="col-sm-9">@Model.Endereco1, @Model.Endereco2</dd>

                    <dt class="col-sm-3">Cidade/Estado</dt>
                    <dd class="col-sm-9">@Model.Cidade / @Model.Estado</dd>

                    <dt class="col-sm-3">CEP</dt>
                    <dd class="col-sm-9">@Model.Cep</dd>

                    <dt class="col-sm-3">Último Pedido</dt>
                    <dd class="col-sm-9">@(Model.DataUltimoPedido == DateTime.MinValue ? "Sem pedidos" : Model.DataUltimoPedido.ToString("dd/MM/yyyy"))</dd>
                </dl>
            </div>
        </div>

    </div>
</div>

<style>
    .bg-purple-dark {
        background-color: #3B0056;
    }

    .bg-purple {
        background-color: #4E007C;
    }

    .text-purple-light {
        color: #C2A0FF;
    }

    .text-purple-lighter {
        color: #E6D8FF;
    }

    .perfil-container {
        max-width: 1000px;
    }

    .perfil-menu .list-group-item {
        color: #E6D8FF;
        cursor: pointer;
    }

        .perfil-menu .list-group-item:hover {
            background-color: #52008C;
        }

    .border-purple {
        border-color: #52008C;
    }

    .perfil-content, .perfil-sidebar {
        box-shadow: 0 5px 15px rgba(0,0,0,0.3);
    }
</style>
